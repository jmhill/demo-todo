{
  "name": "todo-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "predev": "npm run db:migrate && npm run seed:users",
    "dev": "tsx watch src/main.ts",
    "seed:users": "tsx src/scripts/seed-test-users.ts",
    "start": "node dist/src/main.js",
    "test": "NODE_ENV=test npm run test:unit && NODE_ENV=test npm run test:acceptance",
    "test:unit": "NODE_ENV=test vitest run --config vitest.unit.config.ts",
    "test:acceptance": "NODE_ENV=test vitest run --config vitest.acceptance.config.ts",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:watch:unit": "NODE_ENV=test vitest watch --config vitest.unit.config.ts",
    "test:watch:acceptance": "NODE_ENV=test vitest watch --config vitest.acceptance.config.ts",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "test:coverage:unit": "NODE_ENV=test vitest run --coverage --config vitest.unit.config.ts",
    "test:coverage:acceptance": "NODE_ENV=test vitest run --coverage --config vitest.acceptance.config.ts",
    "test:acceptance:debug": "NODE_ENV=test DEBUG=testcontainers* vitest run --config vitest.acceptance.config.ts",
    "config:print": "tsx src/scripts/print-config.ts",
    "config:print:dev": "NODE_ENV=development tsx src/scripts/print-config.ts",
    "config:print:test": "NODE_ENV=test tsx src/scripts/print-config.ts",
    "config:print:prod": "NODE_ENV=production tsx src/scripts/print-config.ts",
    "db:migrate": "tsx src/database/migrate.ts up",
    "db:migrate:down": "tsx src/database/migrate.ts down",
    "db:migrate:status": "tsx src/database/migrate.ts pending",
    "db:migrate:executed": "tsx src/database/migrate.ts executed",
    "db:migrate:raw": "tsx src/database/migrate-mysql-raw.ts",
    "db:reset": "docker compose down -v"
  },
  "type": "module",
  "dependencies": {
    "@demo-todo/api-contracts": "*",
    "@scalar/express-api-reference": "^0.8.20",
    "@ts-rest/express": "3.53.0-rc.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/umzug": "^2.3.9",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "neverthrow": "^8.2.0",
    "sequelize": "^6.37.7",
    "umzug": "^3.8.2",
    "uuid": "^13.0.0"
  }
}
