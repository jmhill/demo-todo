# Example environment variables file
# Copy this file to .env and fill in your actual secrets

# Database password
DB_PASSWORD=your-database-password-here

# JWT secret for authentication tokens
# Generate a secure random string for production
JWT_SECRET=your-jwt-secret-here

# OpenTelemetry configuration
# OTLP endpoint for traces and metrics (defaults to http://localhost:4318 if not set)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Service name for observability (defaults to demo-todo-api if not set)
OTEL_SERVICE_NAME=demo-todo-api

# Log level (optional, defaults to 'info')
LOG_LEVEL=info
