{
  "name": "demo-todo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n api,ui -c blue,magenta \"npm run dev --workspace=todo-api\" \"npm run dev --workspace=todo-ui\"",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "test": "npm run test --workspaces",
    "test:api": "npm run test --workspace=todo-api",
    "test:ui": "npm run test --workspace=todo-ui",
    "test:infra": "npm run test --workspace=@demo-todo/infrastructure",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "quality:checks": "npm-run-all --parallel format lint typecheck",
    "quality:tests": "npm-run-all --parallel test:api test:ui test:infra",
    "quality": "npm-run-all quality:checks quality:tests && echo \"âœ… All quality checks passed!\"",
    "quality:verbose": "npm-run-all --print-label --parallel quality:checks quality:tests",
    "q": "npm run quality",
    "quality:fix": "npm run format:fix && npm run lint:fix && npm run quality",
    "config:print": "tsx src/scripts/print-config.ts",
    "config:print:dev": "NODE_ENV=development tsx src/scripts/print-config.ts",
    "config:print:test": "NODE_ENV=test tsx src/scripts/print-config.ts",
    "config:print:prod": "NODE_ENV=production tsx src/scripts/print-config.ts"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "type": "module",
  "devDependencies": {
    "@testcontainers/mysql": "^11.5.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.5.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "deepmerge-ts": "^7.1.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "mysql2": "^3.15.0",
    "zod": "^4.1.5"
  }
}
